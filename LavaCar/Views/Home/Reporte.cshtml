@model LavaCar.Entidades.ReporteServicio

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reporte de Servicios</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Servicios: ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("servicio", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="form-actions no-color">
            <input type="submit" value="Buscar" class="btn btn-default" />
        </div>
    </div>
 }


    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Placa")
            </th>
            <th>
                @Html.DisplayName("Dueño")
            </th>
            <th>
                @Html.DisplayName("Marca")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.vehiculos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Placa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dueño)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
            </tr>
        }

    </table>
