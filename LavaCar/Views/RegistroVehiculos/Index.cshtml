@model IEnumerable<LavaCar.Entidades.Vehiculo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mantenimiento de Vehículos</h2>

<p>
    @Html.ActionLink("Registrar Vehículo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Placa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dueño)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marca)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Placa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dueño)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Marca)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ID_Vehiculo }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.ID_Vehiculo }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.ID_Vehiculo })
        </td>
    </tr>
}

</table>
